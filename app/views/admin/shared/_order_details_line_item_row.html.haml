%td{:width => "300"}
  .name
    = item.variant.product.name
    = "(#{variant_options(item.variant)})" unless item.variant.option_values.empty?
  .sku
    %label #{t 'sku'}
    (#{item.variant.sku})
  .poa_line_items
    - item.poa_line_items.each do |i|
      .poa_file
        .product_details
          .title 
            %label #{t 'title'}
            #{i.poa_line_item_title_record.title} 
            %span{:class => 'binding'} 
              (#{i.poa_line_item_title_record.cdf_binding_code.name} 
              %span{:class=>'code'} #{i.poa_line_item_title_record.cdf_binding_code.code}) 
          .author 
            %label #{t 'author'}
            = i.poa_line_item_title_record.author
          .publisher 
            %label #{t 'publisher'}
            = i.poa_line_item_pub_record.publisher_name
          .release_date 
            %label #{t 'release_date'}
            = i.poa_line_item_pub_record.publication_release_date.strftime("%D")
        .dc_code
          %label #{t 'warehouse' }
          = i.dc_code.dc_name
          %span{:class => 'code'} (#{i.dc_code.poa_dc_code})
        - if i.poa_additional_detail
          .dc_inventory_information
            %label #{t 'dc_inventory_information'}
            = i.poa_additional_detail.dc_inventory_information
        .poa_status
          %label #{t 'poa_status' }
          = i.poa_status.name 
          %span{:class => 'code'} (#{i.poa_status.code})        
        .total_qty_predicted_to_ship_primary
          %label #{t 'total_qty_predicted_to_ship_primary'}
          = i.poa_line_item_pub_record.total_qty_predicted_to_ship_primary.to_i
        - if i.poa_additional_detail && i.poa_additional_detail.availability_date 
          .availability_date
            %label #{t 'availability_date'}
            = i.poa_additional_detail.availability_date.strftime("%m/%d/%y %H:%M")                    
        - if i.poa_item_number_price_record
          .poa_item_number_price_record
            .item_number_type
              %label #{t 'item_number_type'}
              = i.poa_item_number_price_record.item_number_type        
            .net_price
              %label #{t 'net_price'}
              = i.poa_item_number_price_record.net_price
            .discounted_list_price
              %label #{t 'discounted_list_price'}
              = i.poa_item_number_price_record.discounted_list_price
            .total_line_order_qty
              %label #{t 'total_line_order_qty'}
              = i.poa_item_number_price_record.total_line_order_qty        
                    
      %label #{t 'poa_file'}
      = link_to i.poa_file.file_name, admin_fulfillment_poa_file_path(i.poa_file) 
                        
%td{:class => 'price'}
  = number_to_currency item.price
%td{:class=>"qty"}
  = item.quantity
%td{:class=>"total"}
  %span
    = number_to_currency (item.price * item.quantity)
