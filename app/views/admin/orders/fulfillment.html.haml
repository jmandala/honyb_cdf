= render :partial => 'admin/shared/order_tabs', :locals => {:current => "Fulfillment"}

%h2 #{t("fulfillment")}

%h3 #{t("po_files")}
%div
  - if @order.po_file
    %div
      %strong File Name:
      = link_to @order.po_file.file_name, admin_fulfillment_po_file_path(@order.po_file)
    %div
      %strong Date:
      = @order.po_file.created_at.strftime("%m-%d-%y %H:%M")
  - else
    &mdash;

%h3 #{@order.poa_files.count} #{t("poa_files")}
%table
  %thead
    %tr
      %th
        = t 'file_name'
      %th
        = t 'imported_at'
  %tbody
  - for poa_file in @order.poa_files do
    %tr
      %td
        = link_to poa_file.file_name, admin_fulfillment_poa_file_path(poa_file)
      %td
        = time_ago_in_words(poa_file.imported_at)

%h3 #{t("asn_files")}
%div   &mdash;
