= render :partial => 'admin/shared/fulfillment_sub_menu'

%div.settings
  %h2 Cdf Settings
  %ul
    %li ftp server: #{Cdf::Config[:cdf_ftp_server]}
    %li ftp user: #{Cdf::Config[:cdf_ftp_user]}
    %li ftp pwd: #{Cdf::Config[:cdf_ftp_password]}
    %li ship to account: #{Cdf::Config[:cdf_ship_to_account]}
    %li ship to pwd: #{Cdf::Config[:cdf_ship_to_password]}
    %li bill to account: #{Cdf::Config[:cdf_bill_to_account]}


= form_tag generate_test_orders_admin_orders_path, :method => :post do

  %div.scenarios
    %h2 Select a Scenario
    - Cdf::OrderBuilder::SCENARIOS.each do |scenario|
      - field = "scenarios[]"
      %div{:class => field}
        = check_box_tag(field, scenario[:id], false, {'id' => "scenario_#{scenario[:id]}"})
        = label_tag(field, scenario[:name], :for => "scenario_#{scenario[:id]}")
  %div #{submit_tag 'Generate Test Orders'}

%div.remote_files
  %h2 Outgoing Files
  %ul
    - @outgoing_files.each do |file|
      %li #{file} 
  
  %h2 Test Files
  %ul
    - @test_files.each do |file|
      %li #{file}
      
  %h2 Archive Files
  %ul
    - @archive_files.each do |file|
      %li #{file}
            
  %h2 Incoming Files
  %ul
    - @incoming_files.each do |file|
      %li #{file}