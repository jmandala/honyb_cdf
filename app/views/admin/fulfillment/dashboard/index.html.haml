= render :partial => 'admin/shared/fulfillment_sub_menu'

= form_tag generate_test_orders_admin_orders_path, :method => :post do

  %div.scenarios
    %h2 Select a Scenario
    - Cdf::OrderBuilder::SCENARIOS.each do |scenario|
      - field = "scenarios[]"
      %div{:class => field}
        = check_box_tag(field, scenario[:id], false, {'id' => "scenario_#{scenario[:id]}"})
        = label_tag(field, scenario[:name], :for => "scenario_#{scenario[:id]}")
  %div #{submit_tag 'Generate Test Orders'}
