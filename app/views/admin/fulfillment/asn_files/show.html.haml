= render :partial => 'admin/shared/fulfillment_sub_menu'

%div.admin_buttons
  %div #{button_link_to t('back'), admin_fulfillment_asn_files_path, :icon => '16x16/8'}

%h1 asn Files

%h2 #{@asn_file.file_name}

%div
  %legend
    = t 'asn_type'
  #{@asn_file.asn_type.description}

%p Created at #{@asn_file.created_at.strftime("%m-%d-%y %h:%M")}
%div
  Imported at
  - if @asn_file.imported_at
    #{@asn_file.created_at.strftime("%m-%d-%y %h:%M")}
    %div
      = link_to_with_icon 'add', t('import_now'), import_admin_fulfillment_asn_file_path(@asn_file), method: :post
  - else
    &mdash;
    
%div.field_pair
  %legend
    = t('file_path')
  = @asn_file.path

%h2 Parsed
%pre #{@asn_file.parsed.to_yaml}

%h2 Contents
%div.contents
  - if @asn_file.data
    %pre #{@asn_file.data}
  - else
    &mdash;

- content_for :sidebar do
  .box
    %h3
      #{@asn_file.orders.count} Orders
    %table
      %thead
        %tr
          %th ID
          %th Completed Date
      %tbody
      - for order in @asn_file.orders do
        %tr
          %td
            = link_to order.number, fulfillment_admin_order_path(order)
          %td
            = order.completed_at.strftime("%m-%d-%y")

